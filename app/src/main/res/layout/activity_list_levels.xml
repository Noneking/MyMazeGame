<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context="com.example.nonek.mymazegame.ListLevelsActivity"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@drawable/maze5_portrait">

    <Button
        android:id="@+id/button_level01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/btn_level01"
        android:background="#5dd770"
        android:textColor="#ffffff"
        android:textSize="50dp" />

    <Button
        android:id="@+id/button_level02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/btn_level02"
        android:background="#e1d940"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textSize="50dp"/>

    <Button
        android:id="@+id/button_level03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/btn_level03"
        android:background="#d02a2a"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textSize="50dp"/>

</LinearLayout>
